"""
Function Name: dinnerTime()
Parameters: N/A
Returns: None
"""
def dinnerTime():
    entree = int(input("how many entrees do you want"))
    drinks = int(input("how many drinks do you want"))
    Entree = entree * 12
    Drinks = drinks * 4.50
    rounde_E = round(Entree,2)
    rounded_D = round(Drinks,2)
    total_cost = rounde_E + rounded_D
    print("The total cost of all the meals and drinks is" + str(total_cost))
    
    
    pass
