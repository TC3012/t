"""
Function Name: bottleBonanza()
Parameters: N/A
Returns: None
"""
def bottleBonanza():
    import math
    r = int(input("what is the radius of the water bottle "))
    h = int(input("what is the heigh of the water bottle"))
    radiu = r ** 2
    v = radiu * h * math.pi
    rounded_v = round(v,2)
    print("the volume of the water bottle is" + str(rounded_v))

    pass
    
