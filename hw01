"""
Function Name: skateboardMoney()
Parameters: N/A
Returns: None
"""
def skateboardMoney():
    a = int(input("How much is your monthly allowance "))
    s = int(input("what percentage of your allowance do you want to save"))
    SP = s / 100
    S = a * SP
    F = (5.99 + 4.40) * 30
    L = a - S - F
    rl = round(L,2)
    print("you'll have $" + str(rl) + "left on your skateboard after savings and fees")
    pass
